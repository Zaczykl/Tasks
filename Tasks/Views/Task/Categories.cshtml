@model Tasks.Core.ViewModels.CategoriesViewModel;


@{
    ViewData["Title"] = "Kategorie zadań.";
}

<div class="container">
    <h1><img src=@Url.Content("~/Images/categoryIcon.png") height="50" />@ViewBag.Title</h1>
    <div class="row mt-3">
        <div class="col-md-6">
            @using (Html.BeginForm("Categories", "Task"))
            {
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x=>x.Category.Name,new {@class="form-control",autofocus="autofocus", placeholder="Wprowadź nazwę nowej kategorii."})
                            @Html.ValidationSummary()
                        </div>
                        <div class="col-sm-3">
                            <button type="submit" class="btn btn-primary">Dodaj</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div id="categoriesTable">
    <table class="table table-hover table-bordered mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nazwa</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Categories != null && Model.Categories.Any())
            {
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <button class="btn btn-danger"
                            onclick="deleteCategory('@category.Id',this)">
                                Usuń
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="5">
                        Brak kategorii dla zadań. Dodaj najpierw kategorie.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script type="text/javascript">

        function deleteCategory(id, btn) {
            if (!confirm("Czy na pewno chcesz usunąć kategorię?"))
                return;

            $.ajax({
                type: "POST",
                url: "@Url.Action("DeleteCategory","Task")",
                data: { id: id },
                success: function (data) {
                    if (data.success) {
                        var row = btn.parentNode.parentNode;
                        row.parentNode.removeChild(row);
                    } else {
                        alert(data.message)
                    }
                },
                error: function (data) {
                    alert(data.message)
                },
                dataType: "json"
            });
        }

    </script>
}

